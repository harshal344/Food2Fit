<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg99"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="222dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="sans-serif"
        android:text="Please Enter Your Information!"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/idEdtuserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="166dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/idEdtuserAge"
        android:layout_width="201dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="253dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/idEdtuserGender"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="344dp"
        android:ems="10"
        android:hint="Gender"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idBtnSendData"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="158dp"
        android:onClick="openActivity"
        android:text="Next" />

    <Button
        android:id="@+id/idBtnSendData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtuserGender"
        android:layout_margin="10dp"
        android:text="Add User Details"
        android:textAllCaps="false" />


</RelativeLayout>
